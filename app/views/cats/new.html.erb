<h1>Create a new cat!</h1>

<form action="/cats" method="post">
  <label for="cat_name">First name</label>
  <input type="text" name="cat[name]" id="cat_name">
  <br>
  <br>
  <label for="cat_birth_date">Birth Date</label>
  <input type="text" name="cat[birth_date]" id="cat_birth_date">
  <br>
  <br>

  <label>Sex</label>
  <div>
    <input name="cat[sex]" id="sex_cat_m" value="m" type="radio">
    <label for="cat_sex_m">Male</label>
    <input name="cat[sex]" id="sex_cat_f" value="f" type="radio">
    <label for="cat_sex_f">Female</label>
  </div>
  <br>

  <label for="cat_description">Description</label>
  <textarea name="cat[description]" id="cat_description"></textarea>
  <br>
  <br>
  <label for="cat_color">Color</label>
  <select name="cat[color]">
    <option value="calico">Calico</option>
    <option value="black">Black</option>
    <option value="brown">Brown</option>
    <option value="white">White</option>
    <option value="orange">Orange</option>
  </select>
  <br>
  <br>

  <input type="submit" value="Build my cat!">

</form>
