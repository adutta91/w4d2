<% if @request.persisted? %>
  <form action="/cat_rental_requests/<%=@request.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
<% else %>
  <form action="/cat_rental_requests" method="post">
<% end %>

  <label for="start_date">Start Date</label>
  <input type="date" name="cat_rental_requests[start_date]" id="start_date" value="<%=@request.start_date%>">
  <br>
  <br>
  <label for="end_date">End Date</label>
  <input type="date" name="cat_rental_requests[end_date]" id="end_date" value="<%=@request.end_date%>">
  <br>
  <br>

  <label for="cat_id">Cat</label>
  <select name="cat_rental_requests[cat_id]">
    <% Cat.all.each do |cat| %>
      <option value=" <%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <br>

  <input type="submit" value="Submit!">
</form>
